<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="799dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/buttonHelp"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_help" />

            <ImageButton
                android:id="@+id/buttonCamera"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_camera" />

            <ImageButton
                android:id="@+id/buttonUpload"
                android:layout_width="134dp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_upload" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="367dp">

            <ImageView
                android:id="@+id/imageMainResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/accessibilityFocusedDrawable"
                app:srcCompat="@color/colorPrimary" />

            <TextView
                android:id="@+id/textNoneUploadedYet"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="No image uploaded yet, click the camera or the upload button to get started!"
                android:textSize="24sp" />

        </FrameLayout>

        <SeekBar
            android:id="@+id/seekbarMainResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="false" />

        <TextView
            android:id="@+id/textMainResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="placeholder" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>